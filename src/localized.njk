---
title: News
layout: base.njk
pagination:  
    data: news
    size: 1
    alias: news
permalink: /{{ news.country }}/index.html
---

<style>
    .container {
        align: center;
    }
    .card {
        align: center;
    }
    img {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 10%;
    }
</style>

<div class="container-fluid">
    <h1> News Blogs </h1>
</div>
<div class="vibe"></div>

{% for article in news.articles %}
    <div class="card">
        <img class="card-img-top" src="{{article.urlToImage}}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{article.title}}</h5>
            <p class="card-text">{{article.description}}</p>
            <a href="{{article.url}}" class="btn btn-primary">{{article.source.name}}</a>
        </div>
    </div>

{% endfor %}

